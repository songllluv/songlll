---
const { enableMath = false, enableHighlight = false } = Astro.props;
import "/src/styles/index.css";
const { title } = Astro.props;
---
<html lang="zh-CN">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <script is:inline>
            window.MathJax = {
                tex: {
                    inlineMath: [
                        ["$", "$"],
                        ["\\(", "\\)"],
                    ],
                },
                svg: { fontCache: "global" },
            };
        </script>
        <script defer src="https://cdn.jsdelivr.net/npm/mathjax@4/tex-chtml.js"
        ></script>
        <title>{title}</title>
    </head>
    <body>
        <header>{title}</header>
        <slot></slot>
    </body>
</html>
