---
import Html from "/src/layouts/Html.astro";
---

<Html title="注册">
    <form id="signinForm" method="POST">
        <label for="username">用户名:</label>
        <input type="text" id="username" name="username" required />
        <br />
        <label for="password">密码:</label>
        <input type="password" id="password" name="password" required />
        <br />
        <label for="invitekey">邀请码:</label>
        <input type="text" id="invitekey" name="invitekey" required />
        <br />
        <div
            class="cf-turnstile"
            data-sitekey="0x4AAAAAACV-gPQgGAAoMj9A"
            data-callback="onTurnstileSuccess"
        >
        </div>
        <button type="submit">注册</button>
    </form>

    <script type="text/javascript">
        window.turnstileToken = null;
        function onTurnstileSuccess(token) {
            window.turnstileToken = token;
            console.log("Turnstile token:", token);
        }
        onTurnstileSuccess(null);
    </script>

    <script>
        declare global {
            interface Window {
                turnstileToken: string | null;
            }
        }
        async function fetchWithTimeout(
            resource: string | URL,
            options: { timeout?: number } = {},
        ) {
            const { timeout = 8000 } = options;
            const controller = new AbortController();
            const id = setTimeout(() => controller.abort(), timeout);

            try {
                const response = await fetch(resource, {
                    ...options,
                    signal: controller.signal,
                });
                return response;
            } finally {
                clearTimeout(id);
            }
        }

        async function test(url: string) {
            try {
                await fetchWithTimeout(url, { timeout: 1000 });
                return true;
            } catch {
                return false;
            }
        }

        const baseDiscussUrl = (await test(
            "https://songllluv-edgemockser-41.deno.dev/ping",
        ))
            ? "https://songllluv-edgemockser-41.deno.dev/"
            : "https://ljrfkrxwkqnruheucstl.supabase.co/functions/v1/songlllEdgeService/";

        document
            .getElementById("signinForm")
            ?.addEventListener("submit", async (e) => {
                e.preventDefault();
                if (!window.turnstileToken) {
                    alert("请完成验证码验证");
                    return;
                }

                const form = e.target as HTMLFormElement;
                const formData = new FormData(form);
                const data = {
                    name: formData.get("username")?.toString() || "",
                    password: formData.get("password")?.toString() || "",
                    key: formData.get("invitekey")?.toString() || "",
                    captchaToken: window.turnstileToken, // 对应后端 cf_captcha_verify
                };

                try {
                    const res = await fetch(baseDiscussUrl + "register", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(data),
                    });

                    const resData = await res.json();
                    if (resData.token) {
                        alert("注册成功！");
                        window.location.href = "/login";
                    } else {
                        alert("注册失败：" + (resData.error || "未知错误"));
                    }
                } catch (err) {
                    console.error(err);
                    alert("注册请求失败");
                }
            });
    </script>

    <script
        src="https://challenges.cloudflare.com/turnstile/v0/api.js"
        async
        defer></script>
</Html>
